<!doctype html>
<html>

<head>
	<% include ../../partials/common-head %>
</head>

<body>
	<!--Panel Izquierdo -->
	<% include ../../partials/sidebar-admin %>
	<!-- /Panel izquierdo-->

	<!-- Panel Derecho -->
	<div id="right-panel" class="right-panel">

		<!-- Cabecera-->
		<% include ../../partials/cabecera-admin %>
		<!-- /Cabecera -->

		<!-- Tabla del CRUD-->
		<div class="content mt-3">

			<!-- Mensaje -->
			<% include ../../partials/mensaje %>
			<!-- /Mensaje -->

			<div class="col-sm-12">
				<div class="animated fadeIn">
					<div class="row">
						<div class="col-md-12">
							<!-- Cuerpo -->
							<div class="card">
								<div class="card-header">
									<div class="d-flex justify-content-between">
										<div class="d-flex justify-content-start">
											<strong class="card-title align-middle">Alumnos</strong>
										</div>
									</div>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table id="tabla" class="table table-striped table-bordered">
											<thead>
												<tr>
													<th>Apellido</th>
													<th>Nombre</th>
													<th>AÃ±o de Cursado</th>
													<th>Empresa</th>

													<th class="not-export-col">Acciones</th>
												</tr>
											</thead>
											<tbody>
												<% users.forEach(user => { %>
												<tr data="<%= JSON.stringify(user) %>">
													<td>
														<%= user.User.apellido %>
													</td>
													<td>
														<%= user.User.nombre %>
													</td>
													<td>
														<%= user.anioCursado %>
													</td>
													<td>
														<%= user.Empresa.nombre %>
													</td>

													<td>
														<a id="ver" href="#verModal" class="view mr-2" title="Ver"
															data-toggle="modal" onclick="alert('Falta')">
															<i class="fa fa-eye fa-lg"></i>
														</a>
														<a id="enviarMail" href="#enviarMail" class="goto mr-2"  title="Eviar Mail"
															data-toggle="modal" onclick="alert('Falta')">
															<i class="fa fa-envelope fa-lg"></i>
														</a>
													</td>
												</tr>
												<% }) %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<!-- /Cuerpo -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /Tabla del CRUD-->
	</div>
	<!-- /Panel Derecho -->

	<!-- Formulario de los Popups  -->
	<% include grupo-add %>
	<!-- /Formulario de los Popups  -->

	<!-- Scripts -->
	<% include ../../partials/common-scripts %>
	<script type="text/javascript">
		InitDataTable("#tabla");
	</script>
	<!-- <script src="/scripts/public-grupos.js"></script> -->
</body>

</html>