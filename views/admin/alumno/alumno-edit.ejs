<div id="editarModal" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" action="">
                <div class="modal-header">
                    <h4 class="modal-title">Editar Alumno</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                        onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="userNombre">Nombre</label>
                            <div class="input-group">
                                <input type="text" name="user[nombre]" class="form-control" id="userNombre"
                                    placeholder="Nombre" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="userApellido">Apellido</label>
                            <div class="input-group">
                                <input type="text" name="user[apellido]" class="form-control" id="userApellido"
                                    placeholder="Apellido" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="userEmail">Email</label>
                            <div class="input-group">
                                <input type="email" name="user[email]" class="form-control" id="userEmail"
                                    placeholder="Email" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar"
                        onclick="closeModal()">
                    <input id="botonGuardar" type="submit" class="btn btn-info" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>