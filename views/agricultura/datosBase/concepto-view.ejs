<div id="viewConceptoModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate onsubmit="return validateForm()" method="POST" action="/agriculturaDatosBase/concepto/edit/">
                <div class="modal-header">
                    <h4 class="modal-title">Ver Concepto</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="nombreConcepto" class='control-label'>Nombre</label>
                            <input name="concepto[nombre]" type="text" class="form-control" id="nombreConcepto"
                                placeholder="Nombre" readonly>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="precioConcepto" class='control-label'>Precio</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="concepto[precio]" type="number" min="0" step="0.01" class="form-control"
                                    id="precioConcepto" placeholder="Precio" readonly>
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="porcIVAConcepto" class='control-label'>Porcentaje IVA</label>
                            <select name="concepto[porcIVA]" type="text" class="form-control" id="porcIVAConcepto" readonly disabled>
                                <option value="0">Excento</option>
                                <option value="10.5">10,5 %</option>
                                <option value="21">21,0 %</option>
                                <option value="27">27,0 %</option>
                            </select>
                        </div>
                    </div>

                    <input type="hidden" name="concepto[empresaId]" value="<%= empresa.empresaId %>">
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-danger" data-dismiss="modal" value="Volver">
                </div>
            </form>
        </div>
    </div>
</div>