<div id="agregarModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate onsubmit="return validateForm()" method="POST"
                action="/administraciones/add">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Administración</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="radio-inline mr-3">
                                <input type="radio" name="tipoAlta" value="capital" id="radioCapital"
                                    onclick="MostrarCapital()" checked>
                                <label for="radioCapital">Capital Inicial</label>
                            </label>
                            <label class="radio-inline mr-3">
                                <input type="radio" name="tipoAlta" value="compra" id="radioCompra"
                                    onclick="MostrarCompra()">
                                <label for="radioCompra">Compra durante el ejercicio</label>
                            </label>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="conceptoAdministracion" class='control-label'>Concepto</label>
                            <input name="administracion[concepto]" type="text" class="form-control" id="conceptoAdministracion"
                                placeholder="Concepto" required>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="fechaCompraAdministracion" class='control-label'>Fecha de Compra</label>
                            <input name="administracion[fechaCompra]" type="date" class="form-control"
                                id="fechaCompraAdministracion" value="<%= empresa.inicioEjercicio %>"
                                max="<%= empresa.inicioEjercicio %>" placeholder="Fecha" required onchange="MC_updateFechaDeCompra(this.value)">
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="cantidadAdministracion" class='control-label'>Cantidad</label>
                            <input name="administracion[cantidad]" type="number" min="0" class="form-control"
                                id="cantidadAdministracion" placeholder="Cantidad" required onkeyup="actualizarValorTotal()">
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="unidadAdministracion" class='control-label'>Unidad</label>
                            <select name="administracion[unidad]" type="text" class="form-control input-small"
                                id="unidadAdministracion" placeholder="" required>
                                <option selected>Unidades</option>
                                <option>Metros</option>
                            </select>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="valorAdministracion" class='control-label'>Valor Unitario</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="administracion[valorUnitario]" type="number" min="0" step="0.01"
                                    class="form-control" id="valorAdministracion" placeholder="$/Unidad" required onkeyup="actualizarValorTotal()">
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="vidaUtilAdministracion" class='control-label'>Vida Útil</label>
                            <input name="administracion[vidaUtil]" type="number" min="0" step="1" class="form-control"
                                id="vidaUtilAdministracion" placeholder="Años" required>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="valorResidualAdministracion" class='control-label'>Valor Residual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="administracion[valorResidual]" type="number" min="0" max="100" step="0.01"
                                    class="form-control" id="valorResidualAdministracion" value="0" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="estadoAdministracion" class='control-label'>Estado</label>
                            <select name="administracion[estado]" type="text" class="form-control input-small"
                                id="estadoAdministracion" placeholder="" required>
                                <option selected>Bueno</option>
                                <option>Regular</option>
                                <option>Malo</option>
                            </select>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="administracion[empresaId]" value="<%= empresa.empresaId %>">

                     <!-- COMPRA -->
                     <% include ../../partials/movimientosCompra %>
                     <!-- ./COMPRA -->
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar" onclick="closeModal()">
                    <input id="botonGuardar" type="submit" class="btn btn-info" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>