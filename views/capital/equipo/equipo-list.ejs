<!doctype html>
<html>

<head>
	<% include ../../partials/common-head %>
</head>

<body>

	<!--Panel Izquierdo -->
	<% include ../../partials/sidebar %>
	<!-- /Panel izquierdo-->

	<!-- Panel Derecho -->
	<div id="right-panel" class="right-panel">

		<!-- Cabecera-->
		<% include ../../partials/cabecera %>
		<!-- /Cabecera -->

		<!-- Tabla del CRUD-->
		<div class="content mt-3">

			<!-- Mensaje -->
			<% include ../../partials/mensaje %>
			<!-- /Mensaje -->

			<div class="col-sm-12">
				<div class="animated fadeIn">
					<div class="row">
						<div class="col-md-12">
							<!-- Cuerpo -->
							<div class="card">
								<div class="card-header">
									<div class="d-flex justify-content-between">
										<div class="d-flex justify-content-start">
											<strong class="card-title align-middle">Equipos y Herramientas. Valor
												Total al Cierre $<%= valorTotal.toFixed(2) %></strong>
											<div id="titulo" data-value="Equipos y Herramientas"></div>
										</div>
										<div id="tableButtons" class="d-none d-md-block">
											<a id="agregar" href="#agregarModal" class="btn btn-primary"
												data-toggle="modal">
												<i class="fa fa-plus-circle"></i> Agregar
											</a>
										</div>
										<div id="tableButtons" class="d-md-none">
											<a id="agregar" href="#agregarModal" class="text-white" data-toggle="modal">
												<i class="fa fa-plus-circle"></i>
											</a>
										</div>
									</div>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table id="tabla" class="table table-striped table-bordered">
											<thead>
												<tr>
													<th>Concepto</th>
													<th>UTA</th>
													<th class="d-none">UTA Acarreo</th>
													<th>Valor Unitario ($)</th>
													<th class="d-none">Fecha Compra</th>
													<th class="d-none">Fecha Cierre</th>
													<th class="d-none">Vida Útil</th>
													<th class="d-none">Antigüedad</th>
													<th class="d-none">Amortización ($)</th>
													<th class="d-none">Amortización Acumulada ($)</th>
													<th class="d-none">Valor Residual ($)</th>
													<th class="">Valor a Nuevo ($)</th>
													<th>Estado</th>
													<th class="d-none">Fecha Venta</th>
													<th class="not-export-col">Acciones</th>
												</tr>
											</thead>
											<tbody>
												<% equipos.forEach(equipo => { %>
												<tr data="<%= JSON.stringify(equipo) %>">
													<td>
														<%= equipo.concepto %>
													</td>
													<td>
														<%= equipo.uta %>
													</td>
													<td class="d-none">
														<%= equipo.utaAcarreo %>
													</td>
													<td>
														<%= equipo.valorUnitario.toFixed(2) %>
													</td>
													<td class="d-none">
														<%= equipo.fechaCompra %>
													</td>
													<td class="d-none">
														<%= empresa.finEjercicio %>
													</td>
													<td class="d-none">
														<%= equipo.vidaUtil %>
													</td>
													<td class="d-none">
														<%= equipo.dataValues.antiguedad %>
													</td>
													<td class="d-none">
														<%= equipo.dataValues.amortizacion.toFixed(2) %>
													</td>
													<td class="d-none">
														<%= equipo.dataValues.amortizacionAcumulada.toFixed(2) %>
													</td>
													<td class="d-none">
														<%= equipo.dataValues.valorResidualMonto.toFixed(2) %>
													</td>
													<td class="">
														<%= equipo.dataValues.valorANuevo.toFixed(2) %>
													</td>
													<td>
														<%= equipo.estado %>
													</td>
													<td class="d-none">
														<%= equipo.fechaVenta %>
													</td>
													<td>
														<a id="ver" href="#verModal" class="view mr-2" title="Ver"
															data-toggle="modal">
															<i class="fa fa-eye fa-lg"></i>
														</a>
														<% if(!equipo.dataValues.fechaVenta){ %>
														<a id="editar" href="#editarModal" class="edit mr-2"
															data-toggle="modal">
															<i class="fa fa-edit fa-lg" title="Editar"></i>
														</a>
														<a id="liquidar" href="#liquidarModal" class="liquidar mr-2"
															data-toggle="modal">
															<i class="fa fa-donate fa-lg" title="Liquidar"></i>
														</a>
														<a id="eliminar" href="#eliminarModal" class="delete mr-2"
															data-toggle="modal">
															<i class="fa fa-trash fa-lg" title="Eliminar"></i>
														</a>
														<% } else { %>
														<a id="deshacerLiquidar" href="#deshacerLiquidarModal"
															class="liquidar mr-2" data-toggle="modal">
															<i class="fa fa-undo fa-lg"
																title="Deshacer Liquidación"></i>
														</a>
														<% } %>
													</td>
												</tr>
												<% }) %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<!-- /Cuerpo -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /Tabla del CRUD-->
	</div>
	<!-- /Panel Derecho -->

	<!-- Formulario de los Popups  -->
	<% include equipo-add %>
	<% include equipo-view %>
	<% include equipo-edit %>
	<% include equipo-liquidar %>
	<% include equipo-deshacerLiquidar %>
	<% include equipo-delete %>
	<!-- /Formulario de los Popups  -->

	<!-- Scripts -->
	<% include ../../partials/common-scripts %>
	<script type="text/javascript">
		InitDataTable("#tabla");
	</script>
	<script src="/scripts/public-equipos.js"></script>
</body>

</html>