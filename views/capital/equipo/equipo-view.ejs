<div id="verModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" action="">
                <div class="modal-header">
                    <h4 class="modal-title">Ver Equipo - Herramienta</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                        onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="conceptoEquipo" class='control-label'>Concepto</label>
                            <input name="equipo[concepto]" type="text" class="form-control" id="conceptoEquipo"
                                placeholder="Concepto" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="fechaCompraEquipo" class='control-label'>Fecha de Compra</label>
                            <input name="equipo[fechaCompra]" type="date" class="form-control"
                                id="fechaCompraEquipo" placeholder="Fecha" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="fechaVentaEquipo" class='control-label'>Fecha de Venta</label>
                            <input name="" type="date" class="form-control" id="fechaVentaEquipo" value="" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="utaEquipo" class='control-label'>UTA</label>
                            <input name="equipo[uta]" type="number" min="0" step="0.01" class="form-control"
                                id="utaEquipo" placeholder="UTA" readonly>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="utaAcarreoEquipo" class='control-label'>UTA Acarreo</label>
                            <input name="equipo[utaAcarreo]" type="number" min="0" step="0.01" class="form-control"
                                id="utaAcarreoEquipo" placeholder="UTA Acarreo" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="valorEquipo" class='control-label'>Valor Unitario</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" step="0.01" class="form-control"
                                    id="valorEquipo" placeholder="$/Unidad" readonly>
                            </div>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="vidaUtilEquipo" class='control-label'>Vida Útil</label>
                            <input name="equipo[vidaUtil]" type="number" min="0" step="1" class="form-control"
                                id="vidaUtilEquipo" placeholder="Años" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="antiguedadEquipo" class='control-label'>Antigüedad</label>
                            <input name="" type="number" min="0" step="1" class="form-control" id="antiguedadEquipo"
                                placeholder="Años" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="estadoEquipo" class='control-label'>Estado</label>
                            <input name="equipo[estado]" type="text" class="form-control input-small"
                                id="estadoEquipo" placeholder="" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="amortizacionEquipo" class='control-label'>Amortización</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="amortizacionEquipo" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="amortizacionAcumuladaEquipo" class='control-label'>Amortización
                                Acumulada</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="amortizacionAcumuladaEquipo" value="0" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="valorResidualEquipo" class='control-label'>Porc. Valor Residual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorResidualEquipo" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="valorResidualMontoEquipo" class='control-label'>Monto Valor Residual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorResidualMontoEquipo" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="valorANuevoEquipo" class='control-label'>Valor A Nuevo</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorANuevoEquipo" value="0" readonly>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cerrar"
                        onclick="closeModal()">
                </div>
            </form>
        </div>
    </div>
</div>