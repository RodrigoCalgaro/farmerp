<div id="verModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" action="">
                <div class="modal-header">
                    <h4 class="modal-title">Ver Implemento</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                        onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="conceptoImplemento" class='control-label'>Concepto</label>
                            <input name="implemento[concepto]" type="text" class="form-control" id="conceptoImplemento"
                                placeholder="Concepto" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="fechaCompraImplemento" class='control-label'>Fecha de Compra</label>
                            <input name="implemento[fechaCompra]" type="date" class="form-control"
                                id="fechaCompraImplemento" placeholder="Fecha" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="fechaVentaImplemento" class='control-label'>Fecha de Venta</label>
                            <input name="" type="date" class="form-control" id="fechaVentaImplemento" value="" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="utaImplemento" class='control-label'>UTA</label>
                            <input name="implemento[uta]" type="number" min="0" step="0.01" class="form-control"
                                id="utaImplemento" placeholder="UTA" readonly>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="utaAcarreoImplemento" class='control-label'>UTA Acarreo</label>
                            <input name="implemento[utaAcarreo]" type="number" min="0" step="0.01" class="form-control"
                                id="utaAcarreoImplemento" placeholder="UTA Acarreo" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="valorImplemento" class='control-label'>Valor Unitario</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" step="0.01" class="form-control"
                                    id="valorImplemento" placeholder="$/Unidad" readonly>
                            </div>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="vidaUtilImplemento" class='control-label'>Vida Útil</label>
                            <input name="implemento[vidaUtil]" type="number" min="0" step="1" class="form-control"
                                id="vidaUtilImplemento" placeholder="Años" readonly>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="antiguedadImplemento" class='control-label'>Antigüedad</label>
                            <input name="" type="number" min="0" step="1" class="form-control" id="antiguedadImplemento"
                                placeholder="Años" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="estadoImplemento" class='control-label'>Estado</label>
                            <input name="implemento[estado]" type="text" class="form-control input-small"
                                id="estadoImplemento" placeholder="" readonly>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="amortizacionImplemento" class='control-label'>Amortización</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="amortizacionImplemento" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="amortizacionAcumuladaImplemento" class='control-label'>Amortización
                                Acumulada</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="amortizacionAcumuladaImplemento" value="0" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="valorResidualImplemento" class='control-label'>Porc. Valor Residual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorResidualImplemento" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="valorResidualMontoImplemento" class='control-label'>Monto Valor Residual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorResidualMontoImplemento" value="0" readonly>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="valorANuevoImplemento" class='control-label'>Valor A Nuevo</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="" type="number" min="0" max="100" step="0.01" class="form-control"
                                    id="valorANuevoImplemento" value="0" readonly>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cerrar"
                        onclick="closeModal()">
                </div>
            </form>
        </div>
    </div>
</div>