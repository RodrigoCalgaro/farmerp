<!doctype html>
<html>

<head>
	<% include ../../partials/common-head %>
</head>

<body>

	<!--Panel Izquierdo -->
	<% include ../../partials/sidebar %>
	<!-- /Panel izquierdo-->

	<!-- Panel Derecho -->
	<div id="right-panel" class="right-panel">

		<!-- Cabecera-->
		<% include ../../partials/cabecera %>
		<!-- /Cabecera -->

		<!-- Tabla del CRUD-->
		<div class="content mt-3">

			<!-- Mensaje -->
			<% include ../../partials/mensaje %>
			<!-- /Mensaje -->

			<div class="col-sm-12">
				<div class="animated fadeIn">
					<div class="row">
						<div class="col-md-12">
							<!-- Cuerpo -->
							<div class="card">
								<div class="card-header">
									<div class="d-flex justify-content-between">
										<div class="d-flex justify-content-start">
											<strong class="card-title align-middle">Lotes. Cantidad de Hectareas
												<%= supTotal %>. Valor Total al Cierre $<%= valorTotal %></strong>
											<div id="titulo" data-value="Tabla de Lotes"></div>
										</div>
										<div id="tableButtons" class="d-none d-md-block">
											<a id="agregar" href="#agregarModal" class="btn btn-primary"
												data-toggle="modal">
												<i class="fa fa-plus-circle"></i> Agregar
											</a>
										</div>
										<div id="tableButtons" class="d-md-none">
											<a id="agregar" href="#agregarModal" class="text-white" data-toggle="modal">
												<i class="fa fa-plus-circle"></i>
											</a>
										</div>
									</div>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table id="tabla" class="table table-striped table-bordered">
											<thead>
												<tr>
													<th>Nombre</th>
													<th>Superficie (ha)</th>
													<th class="d-none">Fecha de Compra</th>
													<th>Valor ($/ha)</th>
													<th>Valor Total ($)</th>
													<th class="not-export-col">Acciones</th>
												</tr>
											</thead>
											<tbody>
												<% lotes.forEach(lote => { %>
												<tr data="<%= JSON.stringify(lote) %>">
													<td>
														<%= lote.nombre %>
													</td>
													<td>
														<%= lote.superficie %>
													</td>
													<td class="d-none">
														<%= lote.fechaCompra %>
													</td>
													<td>
														<%= lote.valorHectarea %>
													</td>
													<td>
														<%= lote.dataValues.valorLote %>
													</td>
													<td>
														<a id="ver" href="#verModal" class="view mr-2" title="Ver"
															data-toggle="modal">
															<i class="fa fa-eye fa-lg"></i>
														</a>
														<% if(!lote.dataValues.fechaVenta){ %>
														<a id="editar" href="#editarModal" class="edit mr-2"
															data-toggle="modal">
															<i class="fa fa-edit fa-lg" title="Editar"></i>
														</a>
														<a id="liquidar" href="#liquidarModal" class="liquidar mr-2"
															data-toggle="modal">
															<i class="fa fa-donate fa-lg" title="Liquidar"></i>
														</a>
														<a id="eliminar" href="#eliminarModal" class="delete mr-2"
															data-toggle="modal">
															<i class="fa fa-trash fa-lg" title="Eliminar"></i>
														</a>
														<% } else { %>
															<a id="deshacerLiquidar" href="#deshacerLiquidarModal" class="liquidar mr-2"
															data-toggle="modal">
															<i class="fa fa-undo fa-lg" title="Deshacer LiquidaciÃ³n"></i>
														</a>
														<% } %>
													</td>
												</tr>
												<% }) %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<!-- /Cuerpo -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /Tabla del CRUD-->
	</div>
	<!-- /Panel Derecho -->

	<!-- Formulario de los Popups  -->
	<% include lote-add %>
	<% include lote-view %>
	<% include lote-edit %>
	<% include lote-liquidar %>
	<% include lote-deshacerLiquidar %>
	<% include lote-delete %>
	<!-- /Formulario de los Popups  -->

	<!-- Scripts -->
	<% include ../../partials/common-scripts %>
	<script type="text/javascript">
		InitDataTable("#tabla");
	</script>
	<script src="/scripts/public-lotes.js"></script>
</body>

</html>