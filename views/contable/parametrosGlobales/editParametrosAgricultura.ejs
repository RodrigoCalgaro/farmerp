<div id="editarModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/contable/parametrosGlobales/updateParametroAgricultura/<%= parametroagricultura.Id %>">
                <div class="modal-header">
                    <h4 class="modal-title">Editar Parámetros Globales Agricultura</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="alicuota" class='control-label'>Alícuota</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="parametroagricultura[alicuota]" type="number" min="0" step="0.01" max="100" class="form-control"
                                    id="alicuota" placeholder="Alicuota" value="<%= parametroagricultura.alicuota.toFixed(2) %>" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="iva" class='control-label'>IVA</label>
                            <div class="input-group">
                                <select name="parametroagricultura[iva]" type="text" class="form-control" id="iva" required>
                                    <% if(parametroagricultura.iva == 10.5){ %>
                                        <option value="10.5" selected>10,5 %</option>
                                        <option value="21">21,0 %</option>
                                    <% } else { %>
                                        <option value="10.5">10,5 %</option>
                                        <option value="21" selected>21,0 %</option>
                                    <% } %>
                                </select>
                                    
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input id="botonGuardar" type="submit" class="btn btn-info" value="Aceptar">
                </div>
            </form>
        </div>
    </div>
</div>
