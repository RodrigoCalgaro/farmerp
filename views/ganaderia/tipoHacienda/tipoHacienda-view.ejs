<div id="verModal" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" action="">
                <div class="modal-header">
                    <h4 class="modal-title">Ver Tipo de Hacienda</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                        onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="nombreTipoHacienda" class='control-label'>Nombre</label>
                            <input name="tipoHacienda[nombre]" type="text" class="form-control" id="nombreTipoHacienda"
                                placeholder="Nombre" value="" readonly>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="mortandad" class='control-label'>Indice Mortandad</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="tipoHacienda[mortandad]" type="number" min="0" step="0.01" max="100" class="form-control"
                                    id="mortandad" placeholder="Mortandad" readonly>
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cerrar"
                        onclick="closeModal()">
                </div>
            </form>
        </div>
    </div>
</div>