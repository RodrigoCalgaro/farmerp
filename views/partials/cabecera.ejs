<!-- Cabecera-->
<header id="header" class="header">
	<div class="header-menu">

		<!-- Notificacion-->
		<div class="col-sm-7">
			<!--<a id="menuToggle" class="menutoggle pull-left">
				<i class="fa fa fa-tasks"></i>
			</a> -->
			<div class="header-left">
				<h2 class="text-header"><%= empresa.nombre %></h2>
				<p class="text-header mb-2"><%= empresa.inicioEjercicio + ' al ' + empresa.finEjercicio %></p>
				<input id="datosEmpresa" type="hidden" value="<%= JSON.stringify(empresa) %>">
			</div>
		</div>
		<!-- /Notificacion-->
		<!-- Perfil-->
		<div class="col-sm-5">
			<div class="user-area dropdown float-right" style="line-height: 2.5;">
				<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
					aria-expanded="false">
					<strong id="nombreUsuario" class="mr-2">usuario@mail.com</strong>
					<img class="user-avatar rounded-circle" src="/src/perfil.jpg" alt="User Avatar">
				</a>
				<div class="user-menu dropdown-menu">
					<a class="nav-link" href="/perfil">
						<i class="fa fa-user"></i> Mi Perfil
					</a>
					<a id="botonLogout" class="nav-link" href="/auth/logout">
						<i class="fa fa-power-off"></i> Cerrar la sesi√≥n
					</a>
				</div>
			</div>
		</div>
		<!-- /Perfil-->
	</div>
	<script>
		// disable browser console during tests
		if ("<%= process.env.NODE_ENV %>" == "test") {
			if (!window.console) window.console = {};
			var methods = ["log", "debug", "warn", "info"];
			for (var i = 0; i < methods.length; i++) {
				console[methods[i]] = function () {};
			}
		}

		var datosEmpresa = JSON.parse(document.querySelector("#datosEmpresa").value)

		var empresaInicioEjercicio = new Date(Date.parse(datosEmpresa.inicioEjercicio)+ 3*60*60*1000)
		var empresaFinEjercicio = new Date(Date.parse(datosEmpresa.finEjercicio)+ 3*60*60*1000)
	</script>
</header>
<!-- /Cabecera -->