<div id="agregarModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" action="#">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Cliente</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nombreLote" class='control-label'>Nombre</label>
                            <input name="lote[nombre]" type="text" class="form-control" id="nombreLote"
                                placeholder="Nombre" value="" required>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="superficieLote" class='control-label'>Monto</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="lote[superficie]" type="number" min="0" step="1" class="form-control"
                                    id="superficieLote" placeholder="Monto" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido y solo admite valores enteros.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="nombreLote" class='control-label'>Plazo</label>
                            <select class="form-control" name="lote[cuentaVenta]" id="cuentaVenta" required>
                                <option value="Banco" selected>Corto</option>
                                <option value="Caja">Mediano</option>
                                <option value="Inversion">Largo</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="superficieLote" class='control-label'>Ejercicio</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="lote[superficie]" type="number" min="0" step="1" class="form-control"
                                    id="superficieLote" placeholder="Ejercicio" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido y solo admite valores enteros.
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="superficieLote" class='control-label'>Cant. Coutas</label>

                            <input name="lote[superficie]" type="number" min="0" step="1" class="form-control"
                                id="superficieLote" placeholder="Cuotas" required>
                            <div class="invalid-feedback">
                                Este campo es requerido y solo admite valores enteros.
                            </div>

                        </div>
                    </div>

                    <div class="form-row">
                        <label class="col-md-12">Distribuci√≥n de Pagos</label>
                        <div class="form-group col-md-6">

                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Julio 2019</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Agosto 2019</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Septiembre 2019</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Octubre 2019</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Noviembre 2019</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Diciembre 2019</div>

                        </div>
                        <div class="form-group col-md-6">

                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Enero 2020</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Febrero 2020</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Marzo 2020</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Abril 2020</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Mayo 2020</div>
                            <div class="checkbox"><input name="" id="" value="true" type="checkbox"> Junio 2020</div>

                        </div>
                    </div>



                    <input type="hidden" name="lote[empresaId]" value="<%= empresa.empresaId %>">
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input id="botonGuardar" type="submit" class="btn btn-info" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>