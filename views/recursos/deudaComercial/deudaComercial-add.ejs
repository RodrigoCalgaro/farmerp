<div id="agregarModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="container" id="form-validation" novalidate method="POST" onsubmit="return validateForm()" action="/deudasComerciales/add">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Deuda Comercial</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                        onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nombreDeudaComercial" class='control-label'>Proveedor</label>
                            <input name="deudaComercial[proveedor]" type="text" class="form-control" id="nombreDeudaComercial"
                                placeholder="Proveedor" value="" required>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="montoDeudaComercial" class='control-label'>Monto Inicial</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input name="deudaComercial[montoInicial]" type="number" min="0" step="0.01" class="form-control"
                                    id="montoDeudaComercial" placeholder="Monto" value="0" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido y solo admite valores enteros.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="plazoDeudaComercial" class='control-label'>Plazo</label>
                            <select class="form-control" name="deudaComercial[plazo]" id="plazoDeudaComercial" required>
                                <option value="Corto" selected>Corto</option>
                                <option value="Mediano">Mediano</option>
                                <option value="Largo">Largo</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="ejercicioDeudaComercial" class='control-label'>Ejercicio</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">%</span>
                                </div>
                                <input name="deudaComercial[porcEjercicio]" type="number" min="0" step="0.01" max="100"
                                    class="form-control" id="ejercicioDeudaComercial" placeholder="Ejercicio" required>
                                <div class="invalid-feedback">
                                    Este campo es requerido.
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cuotasDeudaComercial" class='control-label'>Cant. Coutas</label>

                            <input name="deudaComercial[cantCuotas]" type="number" min="1" step="1" max="12" class="form-control"
                                id="cuotasDeudaComercial" placeholder="Cuotas" required>
                            <div class="invalid-feedback">
                                Este campo es requerido.
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cuentaDeudaComercial" class='control-label'>Debitar de Cuenta</label>
                            <select class="form-control" name="deudaComercial[cuenta]" id="cuentaDeudaComercial" required>
                                <option value="Banco" selected>Banco</option>
                                <option value="Caja">Caja</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="col-md-12">Distribuci√≥n de Pagos</label>
                        <div class="form-group col-md-3">
                            <label id="mes1Label" for="mes1DeudaComercial" class="checkbox"><input name="deudaComercial[mes1]"
                                    id="mes1DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes2Label" for="mes2DeudaComercial" class="checkbox"><input name="deudaComercial[mes2]"
                                    id="mes2DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes3Label" for="mes3DeudaComercial" class="checkbox"><input name="deudaComercial[mes3]"
                                    id="mes3DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <label id="mes4Label" for="mes4DeudaComercial" class="checkbox"><input name="deudaComercial[mes4]"
                                    id="mes4DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes5Label" for="mes5DeudaComercial" class="checkbox"><input name="deudaComercial[mes5]"
                                    id="mes5DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes6Label" for="mes6DeudaComercial" class="checkbox"><input name="deudaComercial[mes6]"
                                    id="mes6DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <label id="mes7Label" for="mes7DeudaComercial" class="checkbox"><input name="deudaComercial[mes7]"
                                    id="mes7DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes8Label" for="mes8DeudaComercial" class="checkbox"><input name="deudaComercial[mes8]"
                                    id="mes8DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes9Label" for="mes9DeudaComercial" class="checkbox"><input name="deudaComercial[mes9]"
                                    id="mes9DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <label id="mes10Label" for="mes10DeudaComercial" class="checkbox"><input name="deudaComercial[mes10]"
                                    id="mes10DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes11Label" for="mes11DeudaComercial" class="checkbox"><input name="deudaComercial[mes11]"
                                    id="mes11DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                            <label id="mes12Label" for="mes12DeudaComercial" class="checkbox"><input name="deudaComercial[mes12]"
                                    id="mes12DeudaComercial" value="true" type="checkbox" class="mr-1"></label>
                        </div>
                    </div>


                    <input type="hidden" name="deudaComercial[empresaId]" value="<%= empresa.empresaId %>">
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar"
                        onclick="closeModal()">
                    <input id="botonGuardar" type="submit" class="btn btn-info" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>