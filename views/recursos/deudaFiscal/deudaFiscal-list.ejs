<!doctype html>
<html>

<head>
    <% include ../../partials/common-head %>
</head>

<body>

    <!--Panel Izquierdo -->
    <% include ../../partials/sidebar %>
    <!-- /Panel izquierdo-->

    <!-- Panel Derecho -->
    <div id="right-panel" class="right-panel">

        <!-- Cabecera-->
        <% include ../../partials/cabecera %>
        <!-- /Cabecera -->

        <!-- Tabla del CRUD-->
        <div class="content mt-3">

            <!-- Mensaje -->
            <% include ../../partials/mensaje %>
            <!-- /Mensaje -->

            <div class="col-sm-12">
                <div class="animated fadeIn">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Cuerpo -->
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex justify-content-start">
                                            <strong class="card-title align-middle">Deudas Fiscales</strong>
                                            <div id="titulo" data-value="Deudas Fiscales"></div>
                                        </div>
                                        <div id="tableButtons" class="d-none d-md-block">
                                            <a id="agregar" href="#agregarModal" class="btn btn-primary"
                                                data-toggle="modal">
                                                <i class="fa fa-plus-circle"></i> Agregar
                                            </a>
                                        </div>
                                        <div id="tableButtons" class="d-md-none">
                                            <a id="agregar" href="#agregarModal" class="text-white" data-toggle="modal">
                                                <i class="fa fa-plus-circle"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="tabla" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Concepto</th>
                                                    <th>Monto ($)</th>
                                                    <th>Plazo</th>
                                                    <th>Ejercicio (%)</th>
                                                    <th>Cant. Cuotas</th>
                                                    <th class="not-export-col">Imp. Cuota ($)</th>
                                                    <th class="d-none"><%= empresa.meses[0] %></th>
                                                    <th class="d-none"><%= empresa.meses[1] %></th>
                                                    <th class="d-none"><%= empresa.meses[2] %></th>

                                                    <th class="d-none"><%= empresa.meses[3] %></th>
                                                    <th class="d-none"><%= empresa.meses[4] %></th>
                                                    <th class="d-none"><%= empresa.meses[5] %></th>
                                                    <th class="d-none"><%= empresa.meses[6] %></th>
                                                    <th class="d-none"><%= empresa.meses[7] %></th>
                                                    <th class="d-none"><%= empresa.meses[8] %></th>
                                                    <th class="d-none"><%= empresa.meses[9] %></th>
                                                    <th class="d-none"><%= empresa.meses[10] %></th>
                                                    <th class="d-none"><%= empresa.meses[11] %></th>

                                                    <th class="not-export-col">Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% deudas.forEach(deuda => { %>
                                                <tr data="<%= JSON.stringify(deuda) %>">
                                                    <td>
                                                        <%= deuda.nombre %>
                                                    </td>
                                                    <td>
                                                        <%= deuda.monto %>
                                                    </td>
                                                    <td>
                                                        <%= deuda.plazo %>
                                                    </td>
                                                    <td>
                                                        <%= deuda.porcEjercicio %>
                                                    </td>
                                                    <td>
                                                        <%= deuda.cantCuotas %>
                                                    </td>
                                                    <td>
                                                        <%= deuda.dataValues.importeCuota %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes1 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes2 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes3 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>

                                                    <td class="d-none">
                                                        <%= deuda.mes4 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes5 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes6 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>

                                                    <td class="d-none">
                                                        <%= deuda.mes7 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes8 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes9 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>

                                                    <td class="d-none">
                                                        <%= deuda.mes10 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes11 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>
                                                    <td class="d-none">
                                                        <%= deuda.mes12 ? deuda.dataValues.importeCuota : 0.00 %>
                                                    </td>

                                                    <td>
                                                        <a id="ver" href="#verModal" class="view mr-2" title="Ver"
                                                            data-toggle="modal">
                                                            <i class="fa fa-eye fa-lg"></i>
                                                        </a>

                                                        <a id="editar" href="#editarModal" class="edit mr-2"
                                                            data-toggle="modal">
                                                            <i class="fa fa-edit fa-lg" title="Editar"></i>
                                                        </a>

                                                        <a id="eliminar" href="#eliminarModal" class="delete mr-2"
                                                            data-toggle="modal">
                                                            <i class="fa fa-trash fa-lg" title="Eliminar"></i>
                                                        </a>

                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /Cuerpo -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Tabla del CRUD-->
    </div>
    <!-- /Panel Derecho -->

    <!-- Formulario de los Popups  -->
    <% include deudaFiscal-add %>
    <% include deudaFiscal-edit %>
    <% include deudaFiscal-view %>
    <% include deudaFiscal-delete %>
    <!-- /Formulario de los Popups  -->

    <!-- Scripts -->
    <% include ../../partials/common-scripts %>
    <script type="text/javascript">
        InitDataTable("#tabla");
    </script>
    <script src="/scripts/public-deudasFiscales.js"></script>
</body>

</html>